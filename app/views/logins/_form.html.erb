<%= form_with url: login_path, method: :post do |f| %>
  <div class="field">
    <%= f.label t('.email') %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label t('.password') %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>